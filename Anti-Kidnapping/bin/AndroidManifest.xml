    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.CALL_PHONE" />
<uses-permission android:name="android.permission.READ_PHONE_STATE" />
<uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <activity
            android:name="my.edu.politeknik.antikidnapping.AntiKidnapping"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="my.edu.politeknik.antikidnapping.Phone" />
        <activity android:name="my.edu.politeknik.antikidnapping.sendsms" />
        <activity android:name="my.edu.politeknik.antikidnapping.CallActivity" />
        <activity android:name="my.edu.politeknik.antikidnapping.PoliceActivity" />
        <activity android:name="my.edu.politeknik.antikidnapping.FiremanActivity" />
        <activity android:name="my.edu.politeknik.antikidnapping.MedicalActivity" />
    </application>

</manifest>